<%= content_for :head do %>
  <meta charset="utf-8">

  <script src='/vendor/jquery.min.js'></script>
  <script src='/vendor/underscore-min.js'></script>
  <script src='/js/parse.js'></script>
  <script src='/js/heads.js'></script>
  <script src='/js/file.js'></script>
  <script src="/vendor/firebase.js"></script>
  <script src='/js/fire.js'></script>
  <script src='/js/settings.js'></script>
  <script src='/js/range.js'></script>
  <script src='/js/facebook.js'></script>
  <script src='/js/twitter.js'></script>
  <script src='/vendor/dropzone.js' type='text/javascript'></script>
  <script src='/vendor/spectrum.js' type='text/javascript'></script>
  <script src='/js/colorpicker.js' type='text/javascript'></script>
  <script src='/js/controls.js' type='text/javascript'></script>
  <script src='/js/arihost.js' type='text/javascript'></script>
  <script src='/vendor/croppie.min.js' type='text/javascript'></script>
  <!-- <script src="http://v2-demos.jcrop.org/js/Jcrop.min.js" charset="utf-8"></script> -->

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/settings.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/vendor/spectrum.css">
  <link rel="stylesheet" href="/vendor/croppie.min.css">
  <!-- <link rel="stylesheet" href="http://v2-demos.jcrop.org/css/Jcrop.min.css"> -->
  <link rel="icon" href="/images/icon.png" id='fav-icon'>

  <title>Friend heads SHOW</title>

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Friendheads" />
  <meta property="og:site_name" content="Friendheads"/>
  <meta property="og:title" content="For your friends and their heads"/>
  <meta property="og:description" content="Upload your friendheads and share them with the world."/>
  <meta name="twitter:description" content="Upload your friendheads and share them with the world."/>
<% end %>

<div class="hidden js-page-data" data-i='<%= "#{params[:id]}" %>' data-si='<%= "#{params[:sample_id]}" %>'></div>
<div class="header">
  <div class="header-content">
    <div class='header-left'><a href="/">FriendHeads</a></div>
    <div class='header-right js-control-buttons'>
      <span class='space-bar-area'><img src="/images/space.png" alt="space-bar" class='js-space-button space-bar'></span>
      <img src="/images/minus.png" alt="-" class='js-minus-button plus-or-minus'>
      <img src="/images/plus.png" alt="+" class='js-plus-button plus-or-minus'>
      <img src="/images/question.png" alt="?" class='js-question-button plus-or-minus'>
      <img src="/images/left.png" alt="left" class='js-left-button left-or-right arrow'>
      <div class="up-and-down">
        <img src="/images/up.png" alt="up" class='js-up-button arrow'>
        <img src="/images/down.png" alt="down" class='js-down-button arrow'>
      </div>
      <img src="/images/right.png" alt="right" class='js-right-button left-or-right arrow'>
    </div>
  </div>
</div>
<div class="js-form-stuff form-stuff hidden center clearfix">
  <div class='page-title'>Friendheads</div>
  <div class='page-description'>For your friends and their heads</div>
  <div class='image-upload-button upload-button'>Upload/Drop an image</div>
  <span class='js-advanced-settings-toggle extra-option advanced-settings-toggle'>Advanced Settings</span>
  <span class='js-samples-toggle extra-option samples-toggle'>Samples</span>
  <br>
  <div class="js-samples hidden head-samples"></div>

  <%= render 'advanced_settings' %>
</div>
<canvas id="background-canvas" class='hidden'></canvas>
<canvas id="js-content"></canvas>

<img id='left-hand' class='hidden' src='/limbs/left.png'>
<img id='right-hand' class='hidden' src='/limbs/right.png'>
<img id='left-foot' class='hidden' src='/limbs/left-foot.png'>
<img id='right-foot' class='hidden' src='/limbs/right-foot.png'>


<div class="custom-dz-preview-template hidden">
  <div><img src="/images/load.gif" class="loading loading-img"></div>
</div>


<%= render 'footer' %>
