<% content_for :head do %>
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />

  <% og_image_url = head_og_image_url(@head.external_id) %>

  <meta property="og:image" content="<%= og_image_url %>">
  <meta name="twitter:image" content="<%= og_image_url %>">

<% end %>

<div id='show-page'>
  <% if @head.background_data_url.present? && !@embedded%>
    <img id='background' src='<%=head_background_image_path(@head.external_id) %>'>
  <% else %>
    <img id='background'>
  <% end %>
  <%= render partial: 'main' %>
</div>
